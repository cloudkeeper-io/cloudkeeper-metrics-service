{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "lib": ["es2018"],
    "outDir": "../build"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../*.js"
  ]
}
